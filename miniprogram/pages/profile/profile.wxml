<!-- pages/profile/profile.wxml -->
<view class="profile-page">
  <!-- 用户信息 -->
  <view class="user-header">
    <view class="user-avatar">
      <text class="avatar-emoji">👤</text>
    </view>
    <view class="user-info">
      <text class="user-name">{{userInfo.nickName || '微信用户'}}</text>
      <text class="user-id">ID: {{userInfo.id || 'wx_guest'}}</text>
    </view>
  </view>

  <!-- 统计卡片 -->
  <view class="stats-cards">
    <view class="stat-card">
      <text class="stat-number">{{stats.appointments}}</text>
      <text class="stat-label">预约</text>
    </view>
    <view class="stat-card">
      <text class="stat-number">{{stats.records}}</text>
      <text class="stat-label">回收记录</text>
    </view>
    <view class="stat-card">
      <text class="stat-number">{{stats.calculations}}</text>
      <text class="stat-label">计算历史</text>
    </view>
  </view>

  <!-- 我的服务 -->
  <view class="menu-section">
    <text class="section-title">我的服务</text>
    <view class="menu-list">
      <view class="menu-item" bindtap="onNavTo" data-url="/pages/appointment/appointment">
        <view class="item-left">
          <view class="item-icon" style="background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);">📱</view>
          <view class="item-content">
            <text class="item-title">我的预约</text>
            <text class="item-desc">查看和管理预约记录</text>
          </view>
        </view>
        <text class="item-arrow">›</text>
      </view>

      <view class="menu-item" bindtap="onShowTip">
        <view class="item-left">
          <view class="item-icon" style="background: linear-gradient(135deg, #60A5FA 0%, #3B82F6 100%);">📜</view>
          <view class="item-content">
            <text class="item-title">回收记录</text>
            <text class="item-desc">历史回收交易记录</text>
          </view>
        </view>
        <text class="item-arrow">›</text>
      </view>

      <view class="menu-item" bindtap="onNavTo" data-url="/pages/calculator/calculator">
        <view class="item-left">
          <view class="item-icon" style="background: linear-gradient(135deg, #4ADE80 0%, #22C55E 100%);">🧮</view>
          <view class="item-content">
            <text class="item-title">计算历史</text>
            <text class="item-desc">查看价格计算记录</text>
          </view>
        </view>
        <text class="item-arrow">›</text>
      </view>

      <view class="menu-item" bindtap="onShowTip">
        <view class="item-left">
          <view class="item-icon" style="background: linear-gradient(135deg, #C084FC 0%, #A855F7 100%);">🎟️</view>
          <view class="item-content">
            <text class="item-title">我的优惠券</text>
            <text class="item-desc">查看可用优惠券</text>
          </view>
        </view>
        <view class="item-badge">2</view>
        <text class="item-arrow">›</text>
      </view>
    </view>
  </view>

  <!-- 设置与帮助 -->
  <view class="menu-section">
    <text class="section-title">设置与帮助</text>
    <view class="menu-list">
      <view class="menu-item" bindtap="onShowTip">
        <view class="item-left">
          <view class="item-icon" style="background: linear-gradient(135deg, #FB7185 0%, #F43F5E 100%);">🔔</view>
          <view class="item-content">
            <text class="item-title">消息通知</text>
            <text class="item-desc">预约提醒、价格通知</text>
          </view>
        </view>
        <text class="item-arrow">›</text>
      </view>

      <view class="menu-item" bindtap="onViewStore">
        <view class="item-left">
          <view class="item-icon" style="background: linear-gradient(135deg, #60A5FA 0%, #3B82F6 100%);">📍</view>
          <view class="item-content">
            <text class="item-title">门店地址</text>
            <text class="item-desc">查看门店位置和导航</text>
          </view>
        </view>
        <text class="item-arrow">›</text>
      </view>

      <view class="menu-item" bindtap="onShowTip">
        <view class="item-left">
          <view class="item-icon" style="background: linear-gradient(135deg, #4ADE80 0%, #22C55E 100%);">❓</view>
          <view class="item-content">
            <text class="item-title">常见问题</text>
            <text class="item-desc">回收流程、鉴定说明</text>
          </view>
        </view>
        <text class="item-arrow">›</text>
      </view>

      <view class="menu-item" bindtap="onCallPhone">
        <view class="item-left">
          <view class="item-icon" style="background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);">📞</view>
          <view class="item-content">
            <text class="item-title">联系客服</text>
            <text class="item-desc">400-888-8888</text>
          </view>
        </view>
        <text class="item-arrow">›</text>
      </view>
    </view>
  </view>

  <!-- 其他 -->
  <view class="menu-section">
    <text class="section-title">其他</text>
    <view class="menu-list">
      <view class="menu-item" bindtap="onShowTip">
        <view class="item-left">
          <view class="item-icon" style="background: linear-gradient(135deg, #94A3B8 0%, #64748B 100%);">ℹ️</view>
          <view class="item-content">
            <text class="item-title">关于我们</text>
          </view>
        </view>
        <text class="item-arrow">›</text>
      </view>

      <view class="menu-item" bindtap="onShowTip">
        <view class="item-left">
          <view class="item-icon" style="background: linear-gradient(135deg, #94A3B8 0%, #64748B 100%);">📞</view>
          <view class="item-content">
            <text class="item-title">意见反馈</text>
          </view>
        </view>
        <text class="item-arrow">›</text>
      </view>
    </view>
  </view>

  <!-- 版本信息 -->
  <view class="version-info">
    <text class="version-text">沪金汇 v1.0.0</text>
  </view>

  <!-- 占位 -->
  <view style="height: 40rpx;"></view>
</view>

