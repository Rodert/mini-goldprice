/* pages/calculator/calculator.wxss */
.calculator-page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* Tab栏 */
.tab-bar {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #FFA500;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #FFA500;
  border-radius: 3rpx;
}

/* Tab内容 */
.tab-content {
  padding: 20rpx;
}

/* 计算器表单 */
.calculator-form {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.form-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* 选择器 */
.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.picker-text {
  font-size: 30rpx;
  color: #333;
}

.picker-arrow {
  font-size: 40rpx;
  color: #ccc;
}

/* 当前价格 */
.current-price {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  color: #fff;
}

.price-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.header-label {
  font-size: 26rpx;
  opacity: 0.9;
}

.header-time {
  font-size: 22rpx;
  opacity: 0.8;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-label {
  font-size: 28rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: 700;
}

/* 输入框 */
.input-box {
  position: relative;
  margin-bottom: 20rpx;
}

.input-field {
  width: 100%;
  padding: 25rpx;
  padding-right: 100rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
  font-size: 32rpx;
  font-weight: 600;
}

.input-unit {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999;
}

/* 快捷按钮 */
.quick-btns {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
}

.quick-btn {
  padding: 20rpx;
  background: #f8f9fa;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

/* 计算按钮 */
.calc-btn {
  width: 100%;
  padding: 30rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #fff;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

/* 计算结果 */
.result-box {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border-radius: 20rpx;
  padding: 50rpx 30rpx;
  text-align: center;
  color: #fff;
}

.result-label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  opacity: 0.9;
}

.result-value {
  display: block;
  font-size: 96rpx;
  font-weight: 700;
  margin-bottom: 30rpx;
}

.result-detail {
  display: block;
  font-size: 26rpx;
  margin-bottom: 15rpx;
  opacity: 0.9;
}

.result-tip {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
}

/* 使用说明 */
.tips-box {
  background: #E3F2FD;
  border-radius: 20rpx;
  padding: 30rpx;
  border-left: 6rpx solid #2196F3;
}

.tips-title {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 25rpx;
}

.tips-icon {
  font-size: 36rpx;
}

.tips-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1976D2;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
}

/* 历史记录 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.history-result {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFA500;
}

.history-detail {
  display: flex;
  gap: 30rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-text {
  font-size: 24rpx;
  color: #666;
}

.history-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}

.action-btn {
  padding: 20rpx;
  background: #f8f9fa;
  color: #333;
  border-radius: 12rpx;
  font-size: 26rpx;
  border: none;
}

.action-btn.delete {
  background: #FFEBEE;
  color: #C62828;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  opacity: 0.3;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  display: inline-block;
  padding: 25rpx 50rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

