/* pages/index/index.wxss */
.index-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 品牌栏 */
.brand-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
}

.brand-info {
  display: flex;
  align-items: baseline;
  gap: 20rpx;
}

.brand-logo {
  font-size: 56rpx;
  font-weight: 900;
  color: #fff;
  letter-spacing: 4rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.brand-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  opacity: 0.95;
}

.qrcode-btn {
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.qrcode-btn:active {
  transform: scale(0.95);
}

.qrcode-image {
  width: 100%;
  height: 100%;
}

/* 更新时间 */
.update-time {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 15rpx 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-icon {
  font-size: 24rpx;
}

.time-text {
  font-size: 24rpx;
  color: #666;
}

.mock-badge {
  margin-left: 15rpx;
  padding: 4rpx 16rpx;
  background: #FFF3E0;
  color: #F57C00;
  font-size: 20rpx;
  font-weight: 600;
  border-radius: 20rpx;
  border: 1rpx solid #FFE0B2;
}

/* 分类导航 */
.category-nav {
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  white-space: nowrap;
}

.nav-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.nav-item {
  padding: 25rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.nav-item.active {
  color: #FFA500;
  font-weight: 600;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #FFA500;
  border-radius: 3rpx;
}

/* 价格列表 */
.price-list {
  padding: 20rpx;
}

.price-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.card-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.metal-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
}

.metal-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.metal-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.metal-subtitle {
  font-size: 24rpx;
  color: #999;
}

.card-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.price-row {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}

.price-box {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: center;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.price-box.buy {
  background: #E8F5E9;
}

.price-box.sell {
  background: #FFEBEE;
}

.price-label {
  font-size: 22rpx;
  color: #999;
}

.price-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
}

.price-box.buy .price-value {
  color: #22C55E;
}

.price-box.sell .price-value {
  color: #FF4444;
}

.price-range {
  display: flex;
  justify-content: space-around;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.range-item {
  font-size: 24rpx;
  color: #666;
}

.range-label {
  margin-right: 8rpx;
}

.range-value {
  font-weight: 600;
  color: #333;
}

/* 店铺信息 */
.store-info {
  margin: 20rpx;
}

.store-title {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title-icon {
  font-size: 36rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.info-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.info-item:last-child {
  border-bottom: none;
}

.item-icon {
  font-size: 32rpx;
  margin-top: 5rpx;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.item-label {
  font-size: 24rpx;
  color: #999;
}

.item-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.item-arrow {
  font-size: 40rpx;
  color: #ccc;
  margin-top: 5rpx;
}

.action-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 30rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 25rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #fff;
}

.action-btn:not(.primary) {
  background: #f8f9fa;
  color: #333;
}

.btn-icon {
  font-size: 32rpx;
}

/* 免责声明 */
.disclaimer {
  margin: 20rpx;
  background: #FFF3E0;
  border-left: 6rpx solid #FFA500;
}

.disclaimer-title {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 25rpx;
}

.disclaimer-title .title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #F57C00;
}

.disclaimer-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.disclaimer-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
}

.disclaimer-highlight {
  background: #FFEBEE;
  color: #C62828;
  padding: 15rpx;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
  font-weight: 600;
  border: 1rpx solid #FFCDD2;
}

