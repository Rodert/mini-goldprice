/* pages/appointment/appointment.wxss */
.appointment-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.page-header {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  padding: 50rpx 30rpx;
  text-align: center;
  color: #fff;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 15rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

.form-container {
  padding: 30rpx 20rpx;
}

.form-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.item-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.required {
  color: #FF4444;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.picker-text {
  font-size: 30rpx;
  color: #333;
}

.picker-arrow {
  font-size: 40rpx;
  color: #ccc;
}

.radio-group {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 25rpx;
  background: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.radio-item.active {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border-color: #FFA500;
  color: #fff;
  font-weight: 600;
}

.radio-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
}

.input-field {
  width: 100%;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
  font-size: 30rpx;
}

.textarea-field {
  width: 100%;
  min-height: 150rpx;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
  font-size: 30rpx;
}

.submit-btn {
  width: 100%;
  padding: 30rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #fff;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin-top: 30rpx;
}

.service-tips {
  margin: 20rpx;
  padding: 30rpx;
  background: #E3F2FD;
  border-left: 6rpx solid #2196F3;
}

.tips-title {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 25rpx;
}

.tips-icon {
  font-size: 36rpx;
}

.tips-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1976D2;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
}

